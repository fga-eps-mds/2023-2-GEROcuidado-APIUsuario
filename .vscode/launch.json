    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "restart": true,
            "name": "API",
            "port": 7001,
            "address": "0.0.0.0",
            "localRoot": "${workspaceFolder}/",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "sourceMapPathOverrides": {
                "/home/node/app/*": "${workspaceRoot}/*"
            },
            "remoteRoot": "/home/node/app/"
        }
    ]
}
